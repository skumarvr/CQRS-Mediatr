$primary-color: #FF8C00;

// Css class for Accepted tab details div
.accepted-tab-details {
    margin-top: 20px;
    margin-bottom: 20px;
}

// Css class for Name Badge
.name-badge-text {
    font-size: 20px;
    position: relative;
    bottom: 5px;
    text-transform: uppercase;
}

// Css class for Job contact name
.job-contact-name {
    font-weight: 500 !important;
}

// Css class for Job details text
.job-details-text {
    font-family: Roboto;
    font-size: 14px;
    font-weight: 300;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.43;
    letter-spacing: -0.05px;
    color: #1e1e2d;
    margin: 10px; 

    // Css style for icons
    mat-icon {
        position: relative;
        top: 5px;
        right: 5px;
    }
}

// Css style for phone/email text
.phone-email-text {
    color: $primary-color;
    font-weight: 500;
    font-size: 15px;
}