$primary-color: #FF8C00;

// Css class for Invited tab details div
.invited-tab-details {
    margin-top: 20px;
    margin-bottom: 20px;
}

// Css class for Name Badge
.name-badge-text {
    font-size: 20px;
    position: relative;
    bottom: 5px;
    text-transform: uppercase;
}

// Css class for Job contact name
.job-contact-name {
    font-weight: 500 !important;
}

// Css class for Job details text
.job-details-text {
    margin: 10px;
    // Css style for icons
    mat-icon {
        position: relative;
        top: 5px;
        right: 5px;
    }
}

.job-price-text {
    margin: 10px 40px;
}

// Css style for Accept button
.btn-accept {
    width: 100px;
    background-color: $primary-color;
    border-radius: 0px;
}

// Css style for Decline button
.btn-decline {
    width: 100px;
    margin-left: 10px;
    background-color: #eaeaf0;
    border-radius: 0px;
}
